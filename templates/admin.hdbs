<div class='admin'>
  <a class='back'><i class='icon-circle-arrow-left'/></a>
  <h4>{{t "admin.title"}}</h4>
  <div class='waitSpin hide'>{{spinner}}</div>
  <p>{{t "admin.text"}}</p>

  <ul>
    {{#each fields}}
      <li>
        <input type="checkbox"
          value="{{key}}"
          id="{{key}}"
          {{#if selected}}checked{{/if}}/>
        <label for="{{key}}">{{title}}</label>
      </li>
    {{/each}}
  </ul>

  <button class='btn save'>{{t "admin.save"}}</button>
</div>